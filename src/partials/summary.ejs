<!-- Main bio and summary -->

<div class="row section">
    <div class="four columns centered">
        <img id="profile-pic" src="./assets/img/profile.png">
        <h3><%= summary.name %></h3>
        <h6><%= summary.occupation %></h6>
        <h6><%= summary.location %></h6>
        <br>
    </div>
    <div class="eight columns">
        <p><%= summary.description %></p>
        <p><strong>Languages:</strong> <%= summary.languages.split(",").join(" • ") %></p>
        <p><strong>Technologies/Frameworks:</strong> <%= summary.frameworks.split(",").join(" • ") %></p>
        <%- include('./buttons') %>
    </div>
</div>